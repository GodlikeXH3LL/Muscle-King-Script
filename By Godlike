local Library = loadstring(game:HttpGetAsync("https://github.com/ActualMasterOogway/Fluent-Renewed/releases/latest/download/Fluent.luau"))()
local SaveManager = loadstring(game:HttpGetAsync("https://raw.githubusercontent.com/ActualMasterOogway/Fluent-Renewed/master/Addons/SaveManager.luau"))()
local InterfaceManager = loadstring(game:HttpGetAsync("https://raw.githubusercontent.com/ActualMasterOogway/Fluent-Renewed/master/Addons/InterfaceManager.luau"))()

local Window = Library:CreateWindow({
    Title = "Muscle King Script",
    SubTitle = "By Godlike",
    TabWidth = 125,
    Size = UDim2.fromOffset(830, 525),
    Resize = true,
    MinSize = Vector2.new(470, 380),
    Acrylic = true,
    Theme = "Darker",
    MinimizeKey = Enum.KeyCode.RightControl
})

Library:Notify({
    Title = "Welcome",
    Content = "Hope you enjoy!!!",
    SubContent = "Made by Godlike",
    Duration = 5
})

local Tabs = {
    Main = Window:AddTab({ Title = "Main", Icon = "aperture" }),
    AutoWeight = Window:AddTab({ Title = "Auto Weight", Icon = "dumbbell" }),
    AutoRebirth = Window:AddTab({ Title = "Auto Rebirth", Icon = "circle-fading-arrow-up" }),
    AutoKill = Window:AddTab({ Title = "Auto Kill", Icon = "utensils" }),
    AutoRock = Window:AddTab({ Title = "Auto Rock", Icon = "mountain" }),
    Misc = Window:AddTab({ Title = "Misc", Icon = "settings" }),
    Credits = Window:AddTab({ Title = "Credits", Icon = "file" }),
}

local Section = Tabs.Main:AddSection("The General Stuff")

local selectedSize = 150
local selectedSpeed = 150

local SizeInput = Section:AddInput("SizeChanger", {
    Title = "Size",
    Description = "Change Ur Size",
    Default = "2",
    Placeholder = "Input ur size",
    Numeric = true,
    Finished = false,
    Callback = function(Value)
        selectedSize = Value
        if _G.AutoSize then
            game:GetService("ReplicatedStorage").rEvents.changeSpeedSizeRemote:InvokeServer("changeSize", tonumber(selectedSize))
        end
    end
})

local SizeToggle = Section:AddToggle("Size", {
    Title = "Size",
    Description = "Change ur size",
    Default = false,
    Callback = function(Value)
        _G.AutoSize = Value
        if Value then
            while _G.AutoSize do
                game:GetService("ReplicatedStorage").rEvents.changeSpeedSizeRemote:InvokeServer("changeSize", tonumber(selectedSize))
                task.wait(0.1)
            end
        end
    end
})

local SpeedInput = Section:AddInput("SpeedChanger", {
    Title = "Speed",
    Description = "Change Ur Speed",
    Default = "150",
    Placeholder = "Input ur speed",
    Numeric = true,
    Finished = false,
    Callback = function(Value)
        selectedSpeed = Value
        if _G.AutoSpeed then
            if game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character:FindFirstChild("Humanoid") then
                game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = tonumber(selectedSpeed)
            end
        end
    end
})

local SpeedToggle = Section:AddToggle("Speed", {
    Title = "Speed",
    Description = "Change ur speed",
    Default = false,
    Callback = function(Value)
        _G.AutoSpeed = Value
        while _G.AutoSpeed do
            if game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character:FindFirstChild("Humanoid") then
                game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = tonumber(selectedSpeed)
            end
            task.wait()
        end
    end
})

local Section = Tabs.Main:AddSection("Free Options")

Tabs.Main:AddButton{
    Title = "Free AutoLift Gamepass",
    Callback = function()
        local gamepassFolder = game:GetService("ReplicatedStorage").gamepassIds
        local player = game:GetService("Players").LocalPlayer
        for _, gamepass in pairs(gamepassFolder:GetChildren()) do
            local value = Instance.new("IntValue")
            value.Name = gamepass.Name
            value.Value = gamepass.Value
            value.Parent = player.ownedGamepasses
        end
    end
}

local Section = Tabs.Main:AddSection("Will make more stuff when i invent it")

Tabs.Main:AddButton{
    Title = "Remove Shadows",
    Callback = function()
        game:GetService("Lighting").GlobalShadows = false
    end
}
